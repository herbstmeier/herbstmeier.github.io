@page "/about"
@inject IStringLocalizer<About> Loc

<PageTitle>moritz herbstmeier | @Loc["title"]</PageTitle>

<div class="cv-container">
    <h3 class="mtext">
        @Loc["cv1"]
        <a class="link" href="https://drive.google.com/file/d/1sog8_f_paOaMBmQlJ6s6tFDpoVC96FD-/view?usp=sharing" target="_blank" rel="noopener noreferrer">@Loc["cv2"]</a>?
    </h3>
</div>

<div class="about-container">
    <div>
        <img src="img/bewfoto2.jpg" alt="">
        <div class="value-container">
            <span class="mtext">@Loc["value-head"]</span>
            <ul class="value-list">
                @foreach (var value in values)
                {
                    <li class="stext">@value</li>
                }
            </ul>
        </div>
    </div>

    <div>
        <!--<p class="bio stext">@Loc["bio"]</p>-->
        <p class="bio stext">my biggest weakness is <b>overthinking</b>. but now that i wrote the first line the rest should come easily. :)<br>
            i have always been a <b>creative</b> person. i started taking guitar lessons at age 9 and taught myself music production as a teen. 
            bouldering is another creative outlet for me and offers a great sense of community among climbers.<br>
            i graduated from HAW Hamburg with a bacherlor's degree (b.sc.) in electrical and information engineering.
            i am a lifelong learner, no matter the topic. though i espescially enjoy web development, embedded software development and electronic circuit design.<br>
            </p>
        <div class="skills-container">
            <span class="mtext">@Loc["skill-head"]</span>
            <ul class="tags">
                @foreach (var skill in skills)
                {
                    <li class="highlight stext">@skill</li>
                }
            </ul>
        </div>
    </div>


</div>

@code {
    private string[] values = { "" };
    private string[] skills = { "TypeScript","Python","Java","C","C++","C#","Angular","HTML","CSS","Sass","ASP.NET","Blazor","SQL","VHDL","Arduino" };

    protected override void OnInitialized()
    {
        values = Loc["values"].ToString().Split(" ");
    }
}
