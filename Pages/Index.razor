@page "/home"
@page "/"
@inject NavigationManager NavManager
@inject IStringLocalizer<Index> Loc

<PageTitle>moritz herbstmeier | @Loc["title"]</PageTitle>

<div class="index-container">
    <div class="pitch-container">
        <p class="mtext">@Loc["pitch"]</p>
        <div class="email-container">
            <span class="stext">@Loc["contact"]</span>
            <a class="stext link" href="mailto: moritz.herbstmeier@gmx.de">moritz.herbstmeier@gmx.de</a>
        </div>
    </div>
</div>

@code {
    protected override void OnParametersSet()
    {
        if (NavManager.ToBaseRelativePath(NavManager.Uri) == "")
        {
            NavManager.NavigateTo("/home");
        }
    }
}
